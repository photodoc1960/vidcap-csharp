<Window x:Class="EegScreenCapture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EEG Screen Capture" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="EEG Screen Capture" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Patient ID Input -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Patient ID:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="PatientIdTextBox" Padding="5" FontSize="14"/>
        </StackPanel>

        <!-- Capture Region -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Capture Region:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock x:Name="RegionTextBlock" Text="Not configured" Foreground="Gray"/>
            <Button x:Name="SelectRegionButton" Content="🎯 Select Region Visually"
                    Click="SelectRegionButton_Click" Margin="0,5,0,0" Padding="10,5"/>
        </StackPanel>

        <!-- Recording Controls -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,15">
            <Button x:Name="StartButton" Content="🔴 Start Recording"
                    Click="StartButton_Click" Padding="15,10" FontSize="14" Margin="0,0,10,0"/>
            <Button x:Name="StopButton" Content="⏹️ Stop Recording"
                    Click="StopButton_Click" Padding="15,10" FontSize="14" IsEnabled="False"/>
        </StackPanel>

        <!-- Recording Status -->
        <StackPanel Grid.Row="4" Margin="0,0,0,15">
            <TextBlock x:Name="StatusTextBlock" Text="Ready" FontWeight="Bold" FontSize="14"/>
            <TextBlock x:Name="SegmentTextBlock" Text="" Margin="0,5,0,0"/>
            <TextBlock x:Name="TimeTextBlock" Text="" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Message Log -->
        <GroupBox Grid.Row="5" Header="Messages" Margin="0,0,0,15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="MessageLogTextBlock" TextWrapping="Wrap" Padding="5"/>
            </ScrollViewer>
        </GroupBox>

        <!-- Settings Button -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="⚙️ Settings" Padding="10,5" Click="SettingsButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
