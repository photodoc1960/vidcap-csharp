<Window x:Class="EegScreenCapture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EEG Screen Capture" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="EEG Screen Capture" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Patient ID Input -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Patient ID:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="PatientIdTextBox" Padding="5" FontSize="14"/>
        </StackPanel>

        <!-- Capture Region -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Capture Region:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock x:Name="RegionTextBlock" Text="Not configured" Foreground="Gray"/>
            <Button x:Name="SelectRegionButton" Content="ðŸŽ¯ Select Region Visually"
                    Click="SelectRegionButton_Click" Margin="0,5,0,0" Padding="10,5"/>
        </StackPanel>

        <!-- Recording Controls -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,15">
            <Button x:Name="StartButton" Content="ðŸ”´ Start Recording"
                    Click="StartButton_Click" Padding="15,10" FontSize="14" Margin="0,0,10,0"/>
            <Button x:Name="StopButton" Content="â¹ï¸ Stop Recording"
                    Click="StopButton_Click" Padding="15,10" FontSize="14" IsEnabled="False"/>
        </StackPanel>

        <!-- Recording Status -->
        <StackPanel Grid.Row="4" Margin="0,0,0,15">
            <TextBlock x:Name="StatusTextBlock" Text="Ready" FontWeight="Bold" FontSize="14"/>
            <TextBlock x:Name="SegmentTextBlock" Text="" Margin="0,5,0,0"/>
            <TextBlock x:Name="TimeTextBlock" Text="" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Seizure Detection Status -->
        <GroupBox Grid.Row="5" Header="Seizure Detection Status" Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="100">
                <ItemsControl x:Name="SegmentStatusList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="5" Margin="2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding SegmentLabel}" FontWeight="Bold" Margin="0,0,10,0"/>
                                    <TextBlock Grid.Column="1" Text="{Binding FileName}" Foreground="Gray"/>
                                    <TextBlock Grid.Column="2" Text="{Binding Status}" FontWeight="Bold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Result}" Value="0">
                                                        <Setter Property="Foreground" Value="Green"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Result}" Value="1">
                                                        <Setter Property="Foreground" Value="Red"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Result}" Value="{x:Null}">
                                                        <Setter Property="Foreground" Value="Orange"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>

        <!-- Message Log -->
        <GroupBox Grid.Row="6" Header="Messages" Margin="0,0,0,15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="MessageLogTextBlock" TextWrapping="Wrap" Padding="5"/>
            </ScrollViewer>
        </GroupBox>

        <!-- Settings Button -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="âš™ï¸ Settings" Padding="10,5" Click="SettingsButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
