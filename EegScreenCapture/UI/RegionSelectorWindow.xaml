<Window x:Class="EegScreenCapture.UI.RegionSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Capture Region"
        WindowStyle="None"
        WindowState="Maximized"
        Background="#80000000"
        AllowsTransparency="True"
        Topmost="True"
        Cursor="Cross"
        MouseDown="Window_MouseDown"
        MouseMove="Window_MouseMove"
        MouseUp="Window_MouseUp"
        KeyDown="Window_KeyDown">
    <Canvas x:Name="SelectionCanvas">
        <Rectangle x:Name="SelectionRectangle"
                   Stroke="Lime"
                   StrokeThickness="2"
                   Fill="Transparent"
                   Visibility="Collapsed"/>

        <TextBlock x:Name="InstructionText"
                   Text="Click and drag to select EEG display area. Press ENTER to confirm, ESC to cancel."
                   Foreground="White"
                   FontSize="16"
                   FontWeight="Bold"
                   Background="#AA000000"
                   Padding="10"
                   Canvas.Left="20"
                   Canvas.Top="20"/>
    </Canvas>
</Window>
